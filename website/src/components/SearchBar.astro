<div class="max-w-3xl mx-auto -mt-8 relative z-10 px-4 sm:px-6 animate-fade-up animate-delay-300">
  <div class="bg-white rounded-lg shadow-lg p-3 sm:p-4 flex flex-col sm:flex-row items-stretch sm:items-center gap-3">
    <input 
      type="search" 
      id="searchInput"
      placeholder="Search papers..."
      class="w-full px-4 py-2 rounded-md border border-gray-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm sm:text-base"
    />
  </div>
</div>

<script>
  import { searchStore } from '../stores/searchStore';
  
  const searchInput = document.getElementById('searchInput') as HTMLInputElement;
  
  let debounceTimeout: number;
  
  searchInput?.addEventListener('input', (e) => {
    const target = e.target as HTMLInputElement;
    clearTimeout(debounceTimeout);
    
    debounceTimeout = setTimeout(() => {
      searchStore.search(target.value);
    }, 300) as unknown as number;
  });
</script>