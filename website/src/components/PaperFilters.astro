<div class="flex flex-wrap gap-4 mb-6">
    <div class="flex-1 min-w-[200px]">
      <label for="paperCount" class="block text-sm font-medium text-gray-700 mb-1">
        Number of Papers
      </label>
      <input
        type="number"
        id="paperCount"
        min="1"
        max="100"
        value="10"
        class="w-full px-3 py-2 rounded-md border border-gray-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm"
      />
    </div>
    <div class="flex-1 min-w-[200px]">
      <label for="daysRange" class="block text-sm font-medium text-gray-700 mb-1">
        Days Range
      </label>
      <input
        type="number"
        id="daysRange"
        min="1"
        max="365"
        value="30"
        class="w-full px-3 py-2 rounded-md border border-gray-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm"
      />
    </div>
  </div>
  
  <script>
    import { filterStore } from '../stores/filterStore';
  
    const paperCountInput = document.getElementById('paperCount') as HTMLInputElement;
    const daysRangeInput = document.getElementById('daysRange') as HTMLInputElement;
  
    function updateFilters() {
      filterStore.updateFilters({
        paperCount: parseInt(paperCountInput.value) || 10,
        daysRange: parseInt(daysRangeInput.value) || 30
      });
    }
  
    paperCountInput?.addEventListener('change', updateFilters);
    daysRangeInput?.addEventListener('change', updateFilters);
  
    // Initialize with default values
    updateFilters();
  </script>