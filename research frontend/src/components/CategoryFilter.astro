---
const categories = ['All', 'Computer Science', 'Biology', 'Physics', 'Medicine'];
---
<div class="flex flex-wrap gap-2 pb-4 mb-6 sm:mb-8 animate-fade-up animate-delay-500">
  {categories.map((category, index) => (
    <button 
      class={`px-3 sm:px-4 py-1.5 sm:py-2 rounded-full text-sm font-medium transition-colors
        ${index === 0 ? 'bg-indigo-600 text-white' : 'bg-white text-gray-700 hover:bg-indigo-50'}`}
    >
      {category}
    </button>
  ))}
</div>